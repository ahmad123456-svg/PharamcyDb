@model Pharmacy.ViewModels.LocationViewModel

@{
    ViewData["Title"] = "Delete Location";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Location
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-warning"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this location? This action cannot be undone.
                    </div>

                    <h5>Location Information:</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="25%">ID:</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Full Address:</th>
                            <td><strong>@Model.FullAddress</strong></td>
                        </tr>
                        <tr>
                            <th>Street:</th>
                            <td>@Model.Street</td>
                        </tr>
                        <tr>
                            <th>City:</th>
                            <td>@Model.City</td>
                        </tr>
                        <tr>
                            <th>State:</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    @Model.State
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Country:</th>
                            <td>
                                <span class="badge bg-primary">@Model.CountryName</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Time Zone:</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.TimeZone))
                                {
                                    <code>@Model.TimeZone</code>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date:</th>
                            <td>@Model.CreatedAt.ToString("MMMM dd, yyyy")</td>
                        </tr>
                    </table>

                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Are you absolutely sure you want to delete this location?')">
                                <i class="fas fa-trash"></i> Yes, Delete Location
                            </button>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>