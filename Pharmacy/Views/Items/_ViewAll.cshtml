@model IEnumerable<Pharmacy.ViewModels.ItemViewModel>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-tag me-1"></i>Item Name</th>
                <th><i class="fas fa-align-left me-1"></i>Description</th>
                <th><i class="fas fa-dollar-sign me-1"></i>Price</th>
                <th><i class="fas fa-cubes me-1"></i>Stock</th>
                <th><i class="fas fa-flag me-1"></i>Status</th>
                <th><i class="fas fa-clinic-medical me-1"></i>Pharmacy</th>
                <th><i class="fas fa-calendar-times me-1"></i>Expiry Date</th>
                <th><i class="fas fa-toggle-on me-1"></i>Active</th>
                <th><i class="fas fa-cogs me-1"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.ItemName</strong>
                            @if (!string.IsNullOrEmpty(item.ItemCode))
                            {
                                <br><small class="text-muted">Code: @item.ItemCode</small>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ItemDescription))
                            {
                                @(item.ItemDescription.Length > 50 ? item.ItemDescription.Substring(0, 50) + "..." : item.ItemDescription)
                            }
                            else
                            {
                                <span class="text-muted">No description</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-success">$@item.Price.ToString("F2")</span>
                        </td>
                        <td>
                            @if (item.Stock.HasValue)
                            {
                                <span class="badge @(item.Stock > 10 ? "bg-success" : item.Stock > 0 ? "bg-warning" : "bg-danger")">
                                    @item.Stock
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@item.ItemStatusName</span>
                        </td>
                        <td>@item.PharmacyName</td>
                        <td>
                            @if (item.ExpiryDate.HasValue)
                            {
                                var daysToExpiry = (item.ExpiryDate.Value - DateTime.Now).Days;
                                if (daysToExpiry < 0)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else if (daysToExpiry <= 30)
                                {
                                    <span class="badge bg-warning">@item.ExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">@item.ExpiryDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No expiry</span>
                            }
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times"></i> Inactive
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="showAddEditModal(@item.Id)" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteItem(@item.Id, '@item.ItemName')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-3x mb-3"></i>
                        <br>No items found. Click "Add New Item" to get started.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>