@model Pharmacy.ViewModels.ItemUpdateViewModel

<form id="itemForm" asp-action="AddOrEdit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ItemName" class="form-label">
                    <i class="fas fa-tag me-1"></i>Item Name <span class="text-danger">*</span>
                </label>
                <input asp-for="ItemName" class="form-control" placeholder="Enter item name" required />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ItemCode" class="form-label">
                    <i class="fas fa-barcode me-1"></i>Item Code
                </label>
                <input asp-for="ItemCode" class="form-control" placeholder="Enter item code" />
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label asp-for="ItemDescription" class="form-label">
                    <i class="fas fa-align-left me-1"></i>Description
                </label>
                <textarea asp-for="ItemDescription" class="form-control" rows="3" placeholder="Enter item description"></textarea>
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Price" class="form-label">
                    <i class="fas fa-dollar-sign me-1"></i>Price <span class="text-danger">*</span>
                </label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Stock" class="form-label">
                    <i class="fas fa-cubes me-1"></i>Stock Quantity
                </label>
                <input asp-for="Stock" type="number" class="form-control" placeholder="Enter stock quantity" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ItemStatusesId" class="form-label">
                    <i class="fas fa-flag me-1"></i>Status <span class="text-danger">*</span>
                </label>
                <select asp-for="ItemStatusesId" class="form-select" required>
                    <option value="">-- Select Status --</option>
                    @if (Model.AvailableItemStatuses != null)
                    {
                        @foreach (var status in Model.AvailableItemStatuses)
                        {
                            <option value="@status.Id">@status.DisplayText</option>
                        }
                    }
                </select>
                <span asp-validation-for="ItemStatusesId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PharmaciesId" class="form-label">
                    <i class="fas fa-clinic-medical me-1"></i>Pharmacy <span class="text-danger">*</span>
                </label>
                <select asp-for="PharmaciesId" class="form-select" required>
                    <option value="">-- Select Pharmacy --</option>
                    @if (Model.AvailablePharmacies != null)
                    {
                        @foreach (var pharmacy in Model.AvailablePharmacies)
                        {
                            <option value="@pharmacy.Id">@pharmacy.DisplayText</option>
                        }
                    }
                </select>
                <span asp-validation-for="PharmaciesId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ExpiryDate" class="form-label">
                    <i class="fas fa-calendar-times me-1"></i>Expiry Date
                </label>
                <input asp-for="ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <div class="form-check mt-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">
                        <i class="fas fa-toggle-on me-1"></i>Is Active
                    </label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-1"></i>@(Model.Id == 0 ? "Add Item" : "Update Item")
        </button>
    </div>
</form>

<script>
    $(function () {
        // Focus on first input
        $('#itemForm input:first').focus();
        
        // Handle form submission
        $('#itemForm').off('submit').on('submit', function (e) {
            e.preventDefault();
            saveItem();
        });
    });
</script>