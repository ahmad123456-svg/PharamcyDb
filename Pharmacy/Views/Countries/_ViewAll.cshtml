@model IEnumerable<Pharmacy.ViewModels.CountryViewModel>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-hashtag me-1"></i>ID</th>
                <th><i class="fas fa-flag me-1"></i>Name</th>
                <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var country in Model)
                {
                    <tr data-country-id="@country.Id">
                        <td>@country.Id</td>
                        <td>@country.Name</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-primary" 
                                        onclick="openCountryModal(@country.Id)" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger" 
                                        onclick="deleteCountry(@country.Id)" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">
                        <p>No countries available. <a href="javascript:void(0)" onclick="openCountryModal()">Add the first country</a></p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Summary -->
<div class="row mt-3">
    <div class="col-12">
        <p class="text-muted">
            Total Countries: <strong>@Model.Count()</strong>
        </p>
    </div>
</div>