@{
    ViewData["Title"] = "Pharmacies Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clinic-medical me-2"></i>Pharmacies Management
                    </h3>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <button type="button" class="btn btn-primary" onclick="openPharmacyModal()">
                            <i class="fas fa-plus me-1"></i>Add Pharmacy
                        </button>
                    }
                </div>
                <div class="card-body">
                    <div id="pharmacyTableContainer">
                        <!-- Table content will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Add/Edit Pharmacy -->
<div class="modal fade" id="pharmacyModal" tabindex="-1" aria-labelledby="pharmacyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pharmacyModalLabel">Add Pharmacy</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadPharmacies();
        });
    </script>
}