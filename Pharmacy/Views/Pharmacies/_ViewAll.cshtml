@model List<Pharmacy.ViewModels.PharmacyViewModel>

<table class="table table-bordered table-striped" id="pharmacyTable">
    <thead class="table-dark">
        <tr>
            <th><i class="fas fa-clinic-medical me-1"></i>Pharmacy Name</th>
            <th><i class="fas fa-user me-1"></i>Username</th>
            <th><i class="fas fa-user-tie me-1"></i>Owner</th>
            <th><i class="fas fa-map-marker-alt me-1"></i>Location</th>
            <th><i class="fas fa-credit-card me-1"></i>Account Number</th>
            <th><i class="fas fa-toggle-on me-1"></i>Status</th>
            <th><i class="fas fa-calendar-plus me-1"></i>Created Date</th>
            <th width="150"><i class="fas fa-cogs me-1"></i>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PharmacyName</td>
                    <td>@item.UserName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.UserDisplayName))
                        {
                            <span class="badge bg-secondary">@item.UserDisplayName</span>
                        }
                        else
                        {
                            <span class="text-muted">Unknown User</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.LocationName))
                        {
                            <span class="badge bg-info">@item.LocationName</span>
                        }
                        else
                        {
                            <span class="text-muted">No location</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.AccountNumber))
                        {
                            @item.AccountNumber
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td class="text-center">
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <button onclick="openPharmacyModal(@item.Id)" class="btn btn-info btn-sm me-1" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                            <button onclick="deletePharmacy(@item.Id)" class="btn btn-danger btn-sm" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        }
                        else
                        {
                            <span class="text-muted">No actions</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">
                    <p class="mb-0">No pharmacies found.</p>
                    <button type="button" class="btn btn-primary btn-sm mt-2" onclick="openPharmacyModal()">
                        <i class="fas fa-plus me-1"></i>Add the first pharmacy
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model != null && Model.Any())
{
    <div class="row mt-3">
        <div class="col-12">
            <p class="text-muted">
                Total Pharmacies: <strong>@Model.Count</strong>
                | Active: <strong>@Model.Count(p => p.IsActive)</strong>
                | Inactive: <strong>@Model.Count(p => !p.IsActive)</strong>
            </p>
        </div>
    </div>
}