@{
    ViewData["Title"] = "Item Status";
}

<div class="container-fluid">
    <h1 class="mt-4">Item Status Management</h1>
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <i class="fas fa-table me-1"></i>
                    Item Status List
                </div>
                <div class="col-6 text-end">
                    <button onclick="openItemStatusModal(0)" class="btn btn-success text-white">
                        <i class="fas fa-plus"></i> Add New Item Status
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="itemStatusTableContainer">
                    @await Html.PartialAsync("_ViewAll")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Add/Edit Item Status -->
<div class="modal fade" id="itemStatusModal" tabindex="-1" aria-labelledby="itemStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="itemStatusModalLabel">Add New Item Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="itemStatusModalBody">
                <!-- Form content will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        $(document).ready(function() {
            // Load the initial data
            loadItemStatuses();
        });
    </script>
}